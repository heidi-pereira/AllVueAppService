{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "useDefineForClassFields": false,
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": [ "ESNext", "dom" ],
    "allowJs": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Crucial for smooth imports
    "types": [ "jest" ],
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ],
    "paths": {
      "FeatureGuardShared/*": [ "../Vue.Common.FrontEnd/Components/FeatureGuard/*" ]
    },
    "outDir": "./dist" // Specify a separate directory for compiled output
  },
  "include": [
    "*.ts",
    "src",
    "../Vue.Common.FrontEnd/Components/FeatureGuard/FeatureGuardPermissionHelper.ts"
  ],
  "exclude": [
    "node_modules",
    "**/clientBase.ts",
    "cypress",
    "cypress.config.ts"
  ]
}